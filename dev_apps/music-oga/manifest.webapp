{
  "name": "Music OGA",
  "description": "Original Gaia Music app",
  "type": "certified",
  "launch_path": "/index.html",
  "developer": {
    "name": "The Gaia Team",
    "url": "https://github.com/mozilla-b2g/gaia"
  },
  "permissions": {
    "themeable":{},
    "device-storage:music":{ "access": "readwrite" },
    "device-storage:pictures":{ "access": "readwrite" },
    "settings":{ "access": "readonly" },
    "bluetooth":{},
    "audio-channel-content":{},
    "nfc-share":{},
    "moz-extremely-unstable-and-will-change-webcomponents":{}
  },
  "activities": {
    "pick": {
      "filters": {
        "type": ["audio/*", "audio/mpeg", "audio/ogg", "audio/mp4",
                 "audio/flac"]
       },
      "disposition": "inline",
      "returnValue": true,
      "href": "/index.html#pick"
    },
    "open": {
      "filters": {
        "type": ["audio/mpeg", "audio/ogg", "audio/mp4", "audio/amr",
                 "audio/flac"]
       },
      "disposition": "inline",
      "returnValue": true,
      "href": "/open.html"
    }
  },
  "locales": {
    "ar": {
      "name": "موسيقى OGA",
      "description": "Gaia موسيقى"
    },
    "en-US": {
      "name": "Music OGA",
      "description": "Gaia Music"
    },
    "fr": {
      "name": "Musique OGA",
      "description": "Lecteur audio Gaia"
    },
    "zh-TW": {
      "name": "音樂 OGA",
      "description": "Gaia 音樂"
    }
  },
  "default_locale": "en-US",
  "icons": {
    "84": "/style/icons/default_84.png",
    "126": "/style/icons/default_126.png",
    "142": "/style/icons/default_142.png",
    "189": "/style/icons/default_189.png",
    "284": "/style/icons/default_284.png"
  },
  "orientation": "default",
  "messages": [
     { "media-button": "/index.html" }
  ]
}
